---
import config from '@/lib/config';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "A minimal pastebin for code snippets" } = Astro.props;
const siteUrl = Astro.url.origin;
const currentUrl = Astro.url.href;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={currentUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={`${siteUrl}/og-image.png`} />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${siteUrl}/og-image.png`} />

		<title>{title}</title>
	</head>
	<body class="bg-paper-bg min-h-screen font-sans">
		<header class="sm:fixed sm:top-0 sm:left-0 w-full sm:z-50">
			<div class="max-w-[1600px] mx-auto px-8 py-3">
				<a href="/" class="hover:opacity-70 transition-opacity inline-block" aria-label={`${config.name} home`}>
					<img src={config.logo} alt={config.name} class="h-8 w-auto" loading="eager" />
				</a>
			</div>
		</header>
		<main class="sm:pt-16 px-8 max-w-[1600px] mx-auto">
			<slot />
		</main>
	</body>
</html>
