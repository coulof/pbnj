---
import { Image } from 'astro:assets';
import logo from '@/assets/logo.png';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-paper-bg min-h-screen font-sans">
		<header class="fixed top-0 left-0 w-full z-50">
			<div class="max-w-[1600px] mx-auto px-8 py-3">
				<a href="/" class="hover:opacity-70 transition-opacity inline-block" aria-label="pbnj.sh home">
					<Image src={logo} alt="pbnj.sh" class="h-8 w-auto" loading="eager" />
				</a>
			</div>
		</header>
		<main class="pt-16 px-8 max-w-[1600px] mx-auto">
			<slot />
		</main>
	</body>
</html>
